<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">
		
<struts>
	<package name="default" extends="struts-default">
		<!-- Default Action -->
		<default-action-ref name="index" />
		
		<!-- "index" Action -->
		<action name="index">
			<result>/jsp/index.jsp</result>
		</action>
		
		<!-- Search Action -->
		<action name="search"
				class="org.openclassroom.projet.webapp.action.SearchAction"
				method="doResearch">
			<result>/jsp/search.jsp</result>
		</action>
		
		<!-- Detail Action -->
		<action name="detail_topo"
				class="org.openclassroom.projet.webapp.action.OverviewAction"
				method="doDetailTopo">
			<result name="success">/jsp/detail/detail.jsp</result>		
		</action>
		
	</package>
</struts>