<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!-- == DataSource == -->
	<bean id="dataSourceProjet" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/postgres" />
	</bean>
	
	<!-- == JdbcTemplate == -->
    <bean id="topoDaoImpl" class="org.openclassroom.projet.consumer.impl.TopoDaoImpl">
    	<property name="pDataSource" ref="dataSourceProjet" />
    </bean>
</beans>